<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.GeoSettingFragement">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:columnCount="7"
        android:rowCount="8"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geo Based Optimization"
            android:id="@+id/textView6"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_marginBottom="20dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optimize as I leave home"
            android:id="@+id/leaveoptimize"
            android:layout_row="2"
            android:layout_column="1"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use GPS (Consume Battery)"
            android:id="@+id/GPScheckbox"
            android:layout_row="3"
            android:layout_column="1"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Network ON"
            android:id="@+id/networkCheckbox"
            android:layout_row="4"
            android:layout_column="1"
            android:checked="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveGeo"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:background="@color/colorAccent" />
    </GridLayout>

</FrameLayout>
